@model AntiCheat.DataAccess.Models.User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (!string.IsNullOrEmpty(ViewBag.Wrong))
{
    <p class="text-danger"> @ViewBag.Wrong </p>

}
@if (!string.IsNullOrEmpty(ViewBag.Loged))
{
    <p class="text-success"> @ViewBag.Loged </p>

}
<div class="container mt-5 pt-5 mb-5">

    <div class="col-md-12 shadow bg-white">
        <h3>Bienvenido</h3>
        <hr />
        <form asp-controller="User" asp-action="Login" method="post" class="p-3">

            <div class="form-group">
                <label>Nombre de usuario</label>
                <input type="text" asp-for="UserName" value="" class="form-control" />

            </div>
            <div class="form-group">
                <label>Contraseña</label>
                <input type="password" asp-for="Password" value="" class="form-control" />
            </div>

          
            <input type="submit" value="Ingresar" class="btn btn-dark " />

            <p class="mt-2"> <a asp-controller="User" asp-action="Register">Registrate</a></p>
        </form>

    </div>

</div>
