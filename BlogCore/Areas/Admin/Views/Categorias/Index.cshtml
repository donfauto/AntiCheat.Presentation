@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-primary">Lista de categorías</h2>
            <h6 class="text-muted">Define las categorías van a usar los artículos.</h6>
        </div>
        <div class="col-md-6 text-md-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp;Nueva categoría
            </a>
        </div>
    </div>
    <br />
    <table id="tblCategorias" class="table table-hover table-bordered" style="width:100%;">
        <thead>
            <tr class="table-dark">
                <th class="text-center">Id</th>
                <th class="text-center">Nombre</th>
                <th class="text-center">Orden</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/categoria.js"></script>
 }

