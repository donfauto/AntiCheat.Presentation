@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-primary">Lista de los Sliders</h2>
            <h6 class="text-muted">Define las portadas que van a ser mostradas en el inicio.</h6>
        </div>
        <div class="col-md-6 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp;Nuevo slider
            </a>
        </div>
    </div>

    <br />
    <table id="tblSliders" class="table-responsive table table-hover border" style="width:100%;">
        <thead>
            <tr class="table-dark">
                <th class="text-center">Id</th>
                <th class="text-center">Nombre</th>
                <th class="text-center">Estado</th>
                <th class="text-center">Imagen</th>
                <th class="text-center">Opción</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/slider.js"></script>
}
