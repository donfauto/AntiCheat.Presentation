@model BlogCore.Models.Articulo
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-success ">Volver a lista</a>
    </div>
    <br />
    <div class="row">

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-light  text-light ml-0 row ">
                    <div class="col-12 col-md-6">
                        <h4 class="text-primary">@Model.Nombre</h4>
                    </div>

                    <div class="col-12 col-md-6">
                        <p class="text-muted">@Model.FechaCreacion</p>
                    </div>
                </div>

                <div class="card-body">
                    <div class="col-md-12">
                        <img src="@Model.UrlImagen" class="img-thumbnail mx-auto d-block" />
                        <p>@Html.Raw(Model.Descripcion)</p>
                    </div>
                </div>


            </div>



        </div>
    </div>
</div>
<br />

<div class="container" >
    <div class="row">
        <h3>Articulos relacionados</h3>
        @foreach (var details in ViewBag.Detalles )
        {
            if(details.Id != Model.Id)
                {

        <div class="col-md-2 mb-3 ">
            <div class="card" style="height:100%;">
                <div class=" box bg-image hover-zoom">
                    <img src="@details.UrlImagen" class="img-fluid" alt="La imagen no se pudo cargar..." />
                </div>
                <div class="card-body">
                    @foreach (var DetailsCategory in ViewBag.DetallesCategoria )
                    {
                    <h6 class="text-center"> @DetailsCategory.Nombre</h6>
                    }

                </div>

                <div class="p-2" style="bottom:0px;">
                    <a asp-action="Details" class="btn btn-success form-control" style="border-radius:2px; " asp-route-id="@details.Id"> Ver más</a>
                </div>
            </div>
        </div>
            }
        }
    </div>
</div>
    <style>
        .box {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

            .box img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                object-position: center center;
            }
    </style>


