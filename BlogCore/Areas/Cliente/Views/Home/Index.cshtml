@model BlogCore.Models.ViewModels.HomeVM
@{
    ViewData["Title"] = "Home Page";
}
<!--            SLIDER            -->
<header class="mt-3 container ">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner ">
            @{ int cont = 0; }
            @foreach (var item in Model.Slider)
            {
                var itemDinamico = cont++ == 0 ? "item active" : "item";
                <div class="carousel-item  @itemDinamico" data-mdb-interval="10000">
                    <div class="carousel-caption d-none d-md-block">
                        <h1 class="text-light text-center">@Html.Raw(item.Nombre)</h1>
                    </div>
                    <img class="d-block w-100" src="@Url.Content(item.UrlImagen)">
                </div>
            }
        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</header>
<!--            CIERRA SLIDER            -->

<div class="container">
    <div class=" ">
        <div class="col-md-10 offset-md-1">
            <hr />
            <h5 class="text-center text-dark"> Últimas publicaciones</h5>
            <hr />
        </div>
    </div>
<!--             ARTICULOS            -->
    @if (Model.ListaArticulo.Count() > 0)
    {

        <div class="row">
            @foreach (var articulo in Model.ListaArticulo.OrderByDescending(o => o.Id).Take(6))
            {
                <div class="col-md-2 mb-3 ">
                    <div class="card" style="width:100%; max-width:100%; height:100%">
                        <div class="box d-flex bg-image hover-zoom" onmouseover="HoverShowDetails" style="width: 100%; max-width:100%">
                            <section class="align-bottom" style="width: 100%; max-width:100%">
                                <a asp-action="Details" asp-route-id="@articulo.Id">
                                    <img src="@articulo.UrlImagen" class="img-fluid" style="width:100%" alt="La imagen no se pudo cargar..." />
                                </a>
                                @foreach (var DetailsCategory in ViewBag.DetallesCategoria)
                                {
                                    @if (DetailsCategory.Id == articulo.CategoriaId)
                                    {
                                        @if (articulo.Precio >= 1000 & articulo.Precio <= 3500)
                                        {
                                            <a class="btn btn-warning" title="Precios decentes" style="position:absolute; top:0px; right:0px;border-radius:1.5em;">RD$@articulo.Precio</a>
                                        }
                                        @if (articulo.Precio > 3500)
                                        {
                                            <a class="btn btn-danger" title="Precios hot" style="position:absolute; top:0px; right:0px;border-radius:1.5em;">RD$@articulo.Precio</a>
                                        }
                                        @if (articulo.Precio < 1000)
                                        {
                                            <a class="btn btn-success" title="Precios cómodos" style="position:absolute; top:0px; right:0px;border-radius:1.5em;">RD$@articulo.Precio</a>
                                        }
                                    }
                                }
                                @*<h6 class="" style="position:absolute; bottom:0px; left:0px; border-radius:1.5em;">@articulo.Nombre</h6>*@
                            </section>
                        </div>
                    </div>
                </div>

            }
        </div>

    }
</div>





<div class="bbb_viewed">
